{
  "name": "onlyus-launcher",
  "version": "1.0.0",
  "description": "Minecraft Launcher - OnlyUs Team",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:dir": "electron-builder --dir",
    "clean": "rimraf dist",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "OnlyUs Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/onlyus-launcher.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/onlyus-launcher/issues"
  },
  "homepage": "https://github.com/yourusername/onlyus-launcher#readme",
  "keywords": [
    "minecraft",
    "launcher",
    "gaming",
    "electron",
    "onlyus"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "electron": "^25.9.8",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.6.8",
    "dotenv": "^16.4.1",
    "fs-extra": "^11.2.0",
    "minecraft-launcher-core": "^3.18.2",
    "node-fetch": "^3.3.2",
    "semver": "^7.6.3",
    "uuid": "^9.0.1",
    "ws": "^8.17.1"
  },
  "build": {
    "appId": "com.onlyus.launcher",
    "productName": "OnlyUs Launcher",
    "copyright": "Copyright Â© 2024 OnlyUs Team",
    "directories": {
      "output": "dist",
      "buildResources": "assets/build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!assets/**/*.psd",
      "!assets/**/*.ai",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/icons/",
        "to": "icons/"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/icon.ico",
      "publisherName": "OnlyUs Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "OnlyUs Launcher"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.games",
      "icon": "assets/icons/icon.icns",
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "snap"
      ],
      "icon": "assets/icons/",
      "category": "Game",
      "maintainer": "OnlyUs Team"
    },
    "portable": {
      "artifactName": "OnlyUs-Launcher.exe"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
